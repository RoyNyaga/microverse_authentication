
<div class="container">
	<div class="row">
		<div class="col-md-6 mx-auto">
			<h1>New Post</h1>
			<%= form_for(@post) do |f| %>
  			<div class="field">
    		<%= f.text_area :content, class: "form-control", placeholder: "Compose new micropost..." %>
  			</div>
			<%= f.submit "Post", class: "btn btn-primary form-control" %>
		<% end %>
		</div> 
	</div>
</div>

